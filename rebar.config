%% -*- erlang -*-

{eunit_opts, [verbose]}.

{erl_opts,
  [ debug_info
  , warn_unused_vars
  , warn_shadow_vars
  , warn_unused_import
  , warn_obsolete_guard
  , warnings_as_errors
  ]}.

{deps, []}.

{xref_checks,
  [ undefined_function_calls
  , undefined_functions
  , locals_not_used
  , exports_not_used
  , deprecated_function_calls
  , deprecated_functions
  ]}.

{xref_ignores,
  [ {eclipsesim, main, 1}
  , {eclipsesim, format_error, 1}
  % memory: not yet used
  , {memory, get_word, 1}
  , {memory, init, 0}
  , {memory, set_word, 2}
  ]}.

{escript_emu_args, "%%! +sbtu +A1 +Bd -noshell -smp auto -escript main eclipsesim\n"}.
